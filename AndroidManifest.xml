<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs50.hotpotato"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/dancingpotato"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".HotPotatoActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/testname"
            android:name=".ShowGame" >
        </activity>
        <activity
            android:label="@string/show_name"
            android:name=".ShowGameSpinner" >
        </activity>
        <activity
            android:label="@string/play_name"
            android:name=".PlayGame" >
        </activity>
    </application>

</manifest>